{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
  },
  "variables": {
    "Unique ID": "[uniqueString(concat(resourceGroup().id, 'iot'))]",
    "App Insights Name": "[concat('app-insights-', variables('Unique ID'))]",
    "Log Analytics Name": "[concat('log-analytics-', variables('Unique ID'))]",
    "Event Hub Name": "[concat('event-hub-', variables('Unique ID'))]",
    "Hub Writer": "hubowner",
    "Hub Reader": "hubReader"
  },
  "resources": [
    {
      "type": "Microsoft.Insights/components",
      "name": "[variables('App Insights Name')]",
      "apiVersion": "2015-05-01",
      "location": "[resourceGroup().location]",
      "tags": {
      },
      "kind": "web",
      "properties": {
        "Application_Type": "web"
      },
      "dependsOn": [
      ]
    },
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "name": "[variables('Log Analytics Name')]",
      "apiVersion": "2015-11-01-preview",
      "location": "[resourceGroup().location]",
      "properties": {
        "sku": {
          "name": "PerGB2018"
        }
      },
      "dependsOn": [
      ]
    },
    {
      "type": "Microsoft.EventHub/namespaces",
      "name": "[variables('Event Hub Name')]",
      "apiVersion": "2017-04-01",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "Standard",
        "tier": "Standard",
        "capacity": 0
      },
      "properties": {
        "isAutoInflateEnabled": false,
        "maximumThroughputUnits": 0,
        "kafkaEnabled": false
      },
      "resources": [
      ]
    }
  ],
  "outputs": {
  }
}